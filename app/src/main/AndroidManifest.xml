        </activity>
        <activity
            android:name="com.kseek.opencvsamples.activities.FaceDetectionActivity"
            android:label="@string/title_activity_face_detection"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.kseek.opencvsamples.activities.SamplesActivity">
