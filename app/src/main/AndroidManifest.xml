        </activity>
        <activity
            android:name="com.kseek.opencvsamples.activities.Tutorial3Activity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_tutorial3"
            android:parentActivityName="com.kseek.opencvsamples.activities.SamplesActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kseek.opencvsamples.activities.SamplesActivity" />
        </activity>
        <activity
            android:name="com.kseek.opencvsamples.activities.ImageManipulationsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_image_manipulations"
            android:parentActivityName="com.kseek.opencvsamples.activities.SamplesActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kseek.opencvsamples.activities.SamplesActivity" />
        </activity>
        <activity
            android:name="com.kseek.opencvsamples.activities.ColorBlobDetectionActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_color_blob_detection"
            android:screenOrientation="landscape"
